# Service
DEBUG=true
LOG_LEVEL=INFO

# Execution Mode: "service" (long-running API) or "job" (one-time K8s Job / subprocess)
# For subprocess execution (local dev), use "job" mode for proper exit code handling
EXECUTION_MODE=job

# Backend API (for callbacks)
BACKEND_API_URL=http://localhost:8000

# S3 Storage (MinIO for local dev, S3/R2 for production)
S3_ENDPOINT=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
BUCKET_NAME=vision-platform
S3_REGION=us-east-1

# MLflow Integration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=vision-training
MLFLOW_ENABLE=true

# Training
WORKSPACE_DIR=/tmp/training
MAX_EPOCHS=300
DEFAULT_BATCH_SIZE=16
DEFAULT_IMAGE_SIZE=640

# Callbacks
CALLBACK_INTERVAL=1
CALLBACK_RETRY_ATTEMPTS=3
CALLBACK_RETRY_DELAY=2

# Checkpoints
CHECKPOINT_INTERVAL=5
