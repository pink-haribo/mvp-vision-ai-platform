# ==========================================
# Backend API
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_STORAGE_ENDPOINT=http://localhost:30900

# ==========================================
# NextAuth.js Configuration
# ==========================================
# NextAuth URL (must match your frontend URL)
NEXTAUTH_URL=http://localhost:3000

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# ==========================================
# Keycloak OIDC Configuration
# ==========================================
# Keycloak Client ID (Frontend client - public)
KEYCLOAK_CLIENT_ID=platform-frontend

# Keycloak Client Secret (leave empty for public clients)
KEYCLOAK_CLIENT_SECRET=

# Keycloak Issuer URL (Realm endpoint)
KEYCLOAK_ISSUER=http://localhost:8080/realms/vision-ai
